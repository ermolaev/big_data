{
  "name"               : "system",
  "chef_type"          : "role",
  "json_class"         : "Chef::Role",

  "default_attributes" : {
    "apt"             : {
      "compile_time_update" : true
    },
    "build-essential" : {
      "compile_time" : true
    },
    "openssh"         : {
      "server" : {
        "permit_root_login"      : "no",
        "permit_empty_passwords" : "no",
        "print_lastlog"          : "yes",
        "print_motd"             : "no"
      }
    },
    "ntp"             : {
      "servers" : [
        "0.ru.pool.ntp.org",
        "1.ru.pool.ntp.org",
        "2.ru.pool.ntp.org",
        "3.ru.pool.ntp.org"
      ]
    },
    "users" : [
      "admin"
    ],
    "authorization" : {
      "sudo" : {
        "include_sudoers_d" : true,
        "users"             : ["vagrant", "admin"],
        "groups"            : ["admin"],
        "sudoers_defaults"  : [
          "env_reset",
          "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
        ]
      }
    }
  },
  "run_list" : [
    "recipe[apt]",
    "recipe[build-essential]",
    "recipe[openssh]",
    "recipe[ntp]",
    "recipe[locale]",
    "recipe[openssl]",
    "recipe[sudo]",
    "recipe[user::data_bag]"
  ]
}
